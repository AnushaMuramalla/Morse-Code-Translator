<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.morsecodeconverter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Morse Code Translator"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MorseCodeTranslator">

        <!-- Main Activity -->
        <activity android:name=".MainActivity"
            android:exported="true"> <!-- Marked as exported -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Morse Code Guide Activity -->
        <activity android:name=".MorseCodeGuideActivity"
            android:exported="false"/> <!-- Not exported, only internal use -->
        <activity android:name=".TestActivity"/>

    </application>

</manifest>
